<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="200" prefWidth="385.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.PrincipalController">
   <children>
      <VBox prefHeight="200.0" prefWidth="385.0">
         <children>
            <HBox alignment="CENTER" prefHeight="35.0" prefWidth="320.0">
               <children>
                  <Label alignment="CENTER" prefHeight="30.0" prefWidth="320.0" text="Minha Calculadora" textFill="#d30505">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="320.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Valor 1">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtFldValor1">
                           <opaqueInsets>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </opaqueInsets>
                           <VBox.margin>
                              <Insets right="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children></VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Valor 2">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="txtFldValor2">
                           <VBox.margin>
                              <Insets left="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children></VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="btnSomar" mnemonicParsing="false" onAction="#btnSomarClick" prefWidth="90.0" text="Somar" />
                  <Button fx:id="btnSubtrair" mnemonicParsing="false" onAction="#btnSubtrairClick" prefWidth="90.0" text="Subtrair" />
                  <Button fx:id="btnMultiplicar" mnemonicParsing="false" onAction="#btnMultiplicarClick" prefWidth="90.0" text="Multiplicar" />
                  <Button fx:id="btnDividir" mnemonicParsing="false" onAction="#btnDividirClick" prefWidth="90.0" text="Dividir" />
               </children>
               <VBox.margin>
                  <Insets left="5.0" right="5.0" />
               </VBox.margin>
            </HBox>

                  <HBox alignment="CENTER" prefHeight="21.0" prefWidth="385.0">
               <children>
                  <Label fx:id="lblResultado" text="Resultado">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="24.0" prefWidth="385.0" spacing="10.0">
               <children>
                  <Button fx:id="btnLimpar" mnemonicParsing="false" onAction="#btnLimparClick" prefWidth="70.0" text="Limpar" />
                  <Button fx:id="btnSair" mnemonicParsing="false" onAction="#btnSairClick" prefWidth="70.0" text="Sair" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
